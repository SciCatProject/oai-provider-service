    "mongodb": "^6.7.0",
    "node": "^20.14.0",
    "pino": "^9.1.0",
    "xml": "^1.0.1",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "rimraf": "^5.0.7",
