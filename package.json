  "engines": {
    "node": ">=18.0.0"
  },
 "scripts": {
    "clean": "gulp dist-clean",
    "distclean": "gulp dist-clean && gulp build && gulp copy-production",
    "start": "cd dist && NODE_ENV=production node index",
